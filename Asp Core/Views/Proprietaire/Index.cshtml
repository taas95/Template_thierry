                    @*     <td>5</td> *@
                    @*     <td>5</td> *@
                    @* </tr> *@
                    </tbody>
                </table>

            </div>
        </div>
        <div>
            <a modal-trigger class="btn-floating right btn-large waves-effect modal-trigger  waves-light red"
               href="#immeublemodal">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>
    <partial name="_addProprioModal"/>
</section>